generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Minor {
  ID Int @id @default(autoincrement())
  NAME String
  DESCRIPTION String
  LINKTOWEBSITE String
  RATING Float
  REVIEWS Review[]
  UNIVERSITY University @relation(fields: [UNIVERSITYID],references: [ID])
  UNIVERSITYID Int
}

model Review {
  ID Int @id @default(autoincrement())
  RATING String
  STUDENT String
  CONTENT String
  MINOR Minor @relation(fields: [MINORID], references: [ID])
  MINORID Int
}

model University {
  ID Int @id @default(autoincrement())
  NAME String
  LOCATION String
  PICTUREURL String
  MINORS Minor[]
}
